pipeline {
  environment {
    imagename = "hosseinkarjoo/simple-httpd"
    registryCredential = 'yenigul-dockerhub'
    dockerImage = ''
    branchname = 'Front-Stage'
    gitusercreds = "hosseinkarjoo"
    girurl = "https://github.com/hosseinkarjoo/DevOps-Training-Full-Deployment.git"
  }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
#        git([url: 'https://github.com/hosseinkarjoo/DevOps-Training-Full-Deployment.git', branch: branchname, credentialsId: 'ismailyenigul-github-user-token'])
         script {
           git credentialsId: gitusercreds, url: giturl
           sh "git checkout branchname"
          }

      }
    }
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build imagename
        }
      }
    }
    stage('Deploy Image') {
      steps{
        script {
          docker.withRegistry( '', registryCredential ) {
            dockerImage.push("$BUILD_NUMBER")
             dockerImage.push('latest')

          }
        }
      }
    }
    stage('Remove Unused docker image') {
      steps{
        sh "docker rmi $imagename:$BUILD_NUMBER"
         sh "docker rmi $imagename:latest"

      }
    }
  }
}
